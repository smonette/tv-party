<% include ../partials/_header.ejs%>
<div class="row">
  <div class="row">
    <div class="col-sm-12 large-tile">
      <img src="<%=show.img_url%>">
    </div>
  </div>
  <div class="col-sm-10 col-sm-offset-1">
    <div class="row">
      <div class="col-sm-7">
        <h2><%= show.name  %></h2>

        <div class="socket-div">
          <div class="socket-chat">
            <ul id="messages"></ul>
          </div>
          <div class="chat-form">
            <form action="" class="chat-box">
              <input id="m" autocomplete="off" class="chat-input"/><button class="chat-button">Send</button>
            </form>
          </div>
        </div>

        <script src="/socket.io/socket.io.js"></script>
        <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
        <script>
          var socket = io();
          $('form').submit(function(){
            socket.emit('chat message', $('#m').val());
            $('#m').val('');
            return false;
          });
          socket.on('chat message', function(msg){
            $('#messages').append($('<li>').text(msg));
          });
        </script>
      </div>
      <div class="col-sm-4 col-sm-offset-1">
        <h3>What's new with <a href="http://www.twitter.com/<%= show.twitter_handle %>"><%= show.twitter_handle %></a></h3>
          <ul class="tweet-stream">
            <% for(i = 0; i < tweets.length; i++) { %>
              <li class="tweet">
                <p><a href="http://twitter.com/<%= tweets[0].show.screen_name %>/status/<%= tweets[i].id_str %>"><%= tweets[i].text %></a></p>
              </li>
            <% } %>
          </ul>
      </div>
    </div>
  </div>
</div>


<% include ../partials/_footer.ejs %>


